/**
 * COMPONENTS
 */

const Navigation = ({ activeSection, scrollToSection, isScrolled, language, setLanguage, ui }) => {
  const [isOpen, setIsOpen] = useState(false);

  const navLinks = [
    { name: ui.nav.about, id: 'about' },
    { name: ui.nav.skills, id: 'skills' },
    { name: ui.nav.experience, id: 'experience' },
    { name: ui.nav.projects, id: 'projects' },
    { name: ui.nav.contact, id: 'contact' },
  ];

  const toggleLanguage = () => {
    setLanguage(prev => prev === 'en' ? 'zh' : 'en');
    setIsOpen(false);
  };

  return (
    <nav className={`fixed w-full z-50 transition-all duration-300 ${isScrolled ? 'bg-white/90 backdrop-blur-md shadow-sm py-4' : 'bg-transparent py-6'}`}>
      <div className="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div className="flex justify-between items-center">
          <div 
            className="text-2xl font-bold text-slate-800 cursor-pointer flex items-center gap-2"
            onClick={() => scrollToSection('hero')}
          >
            <Globe className="w-6 h-6 text-blue-600" />
            <span>{language === 'en' ? 'Yan' : 'Li'}<span className="text-blue-600">.Li</span></span>
          </div>

          {/* Desktop Nav */}
          <div className="hidden md:flex items-center space-x-8">
            {navLinks.map((link) => (
              <button
                key={link.name}
                onClick={() => scrollToSection(link.id)}
                className={`text-sm font-medium transition-colors hover:text-blue-600 ${
                  activeSection === link.id ? 'text-blue-600' : 'text-slate-600'
                }`}
              >
                {link.name}
              </button>
            ))}
            
            {/* Language Toggle Desktop */}
            <button 
              onClick={toggleLanguage}
              className="flex items-center gap-1 px-3 py-1.5 rounded-full bg-slate-100 hover:bg-blue-50 text-slate-600 hover:text-blue-600 transition-colors text-sm font-medium"
            >
              <Languages size={16} />
              <span>{language === 'en' ? 'CN' : 'EN'}</span>
            </button>

            <a 
              href={PORTFOLIO_DATA[language].personal.social.resume}
              className="px-4 py-2 rounded-full bg-slate-900 text-white text-sm font-medium hover:bg-slate-800 transition-all transform hover:-translate-y-0.5"
            >
              {ui.nav.resume}
            </a>
          </div>

          {/* Mobile Menu Button */}
          <div className="md:hidden flex items-center gap-4">
            <button 
              onClick={toggleLanguage}
              className="flex items-center gap-1 px-3 py-1.5 rounded-full bg-slate-100 text-slate-600 text-xs font-medium"
            >
              {language === 'en' ? 'CN' : 'EN'}
            </button>
            <button onClick={() => setIsOpen(!isOpen)} className="text-slate-600">
              {isOpen ? <X size={24} /> : <Menu size={24} />}
            </button>
          </div>
        </div>
      </div>

      {/* Mobile Menu */}
      {isOpen && (
        <div className="md:hidden absolute top-full left-0 w-full bg-white border-b border-slate-100 shadow-lg py-4">
          <div className="flex flex-col space-y-4 px-6">
            {navLinks.map((link) => (
              <button
                key={link.name}
                onClick={() => {
                  scrollToSection(link.id);
                  setIsOpen(false);
                }}
                className="text-left text-slate-600 font-medium hover:text-blue-600"
              >
                {link.name}
              </button>
            ))}
          </div>
        </div>
      )}
    </nav>
  );
};

